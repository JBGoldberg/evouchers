{
    "name": "evoucher",
    "description": "A small demo about vouchers",
    "keywords": ["vouchers", "demo", "programming", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jim Bruno Goldberg",
            "email": "goldberg@nekutima.solutions",
            "homepage": "http://nekutima.solutions/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "twig/twig": "^2.0",
        "twbs/bootstrap": "^3.3",
        "slim/flash": "^0.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost -t public public/index.php",
        "test": "./vendor/bin/phpunit ./tests"
    }

}
